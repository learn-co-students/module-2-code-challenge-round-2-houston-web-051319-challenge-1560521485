<h1>Create new Apperance</h1>

<form method="POST" action="/apperances">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token%>
    <div>
        <label>Guest: </label>
        <select name="guest_id">
            <% @guests.each do |g| %>
                <option value="<%= g.id %>"> <%= g.name %> </option>
            <%end%>
        </select>
    </div>

    <div>
        <label>Episode: </label>
        <select name="episode_id">
            <% @episodes.each do |e| %>
                <option value="<%= e.id %>"> <%= e.number %> </option>
            <%end%>
        </select>
    </div>

    <div>
        <label>Rating :</label>
        <input type="text" name="rating">
    </div>

    <div>
        <input type="submit" value="submit">
    </div>
</form>